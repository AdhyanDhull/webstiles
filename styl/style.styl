@import 'partials/_normalize'
@import 'partials/_grid'
@import 'partials/_var'




/* ==========================================================================
   =CORE
   ========================================================================== */

body {
  background: $body-background-color
}

/* Remember to use normalize or a reset! */

body, input, textarea, button, form, select {
  font-size: $root-font-size
  line-height: $root-line-height
  font-family: $main-font-family
  color: $root-text-color
  /* Inputs, forms, etc, can have weird font styles */
}

a, a:link, a:visited { 
  text-decoration: none
  color: $prim-color
  border-bottom: thin solid transparent

  transition: all .3s ease
}

a:hover, a:active, a:focus {
  border-bottom-color: #ddd
}

.wrap {
  width: 80em
  max-width: 95%
  margin: 0 auto
}

.ws-item {
  margin-bottom: 3em
}

.ws-item > h1 {
  font-size: .875em
  color: #999
  margin: 0 0 1.714em 0
}




/* ==========================================================================
   =TYPOGRAPHY
   ========================================================================== */

p { margin: 0 }
p + p { margin-top: 1.5em }

/* Headings */
h1, h2, h3, h4, h5, h6 {
    /* Set defaults for all headings here, 
    you might want to change fonts or sizes */
    color: $sec-text-color
    font-weight: 400
    font-family: $sec-font-family
}

h1 {
    font-size: 2em
    line-height: 1.5
    margin: (1.5em/2) 0 (1em/2)
}

h2 {
    font-size: 1.5em
    line-height: 1
    margin: 1em 0 (1em/1.5)
}

h3 {
    font-size: 1.25em
    line-height: 1.2
    margin: 1.2em 0 (1em/1.25)
}

h4 {
    font-size: 1.125em
    line-height: 1.333333
    margin: .666666em 0
}

h5, h6 { 
    font-size: 1em
    line-height: 1.5
    margin: .75em 0
    text-transform: uppercase
}





/* ==========================================================================
   =MASTHEAD
   ========================================================================== */

.masthead { 
  background: #f6f6f6 
  overflow: hidden 
  margin-bottom: 1.5em 
}

.logo h1 { 
  margin: 0 
  float: left 
  padding: .5em 0
  font-family: $main-font-family
  font-size: 2em
  line-height: 1
}

.menu { float: right }
.menu ul { padding: 1.5em 0 margin: 0 }

.menu li {
  list-style: none
  display: inline-block
  margin: 0 0 .5em .5em
}

.menu a {
  padding: .5em
  border: .25em solid $prim-color
  display: block
}

.menu a:hover {
  background: $prim-color
  color: white
}





/* ==========================================================================
   =COLOR
   ========================================================================== */

[class^="color"] {
  height: 5em
}

.color-1 { background: $color-1-color }
.color-2 { background: $color-2-color }
.color-3 { background: $color-3-color }
.color-4 { background: $color-4-color }
.color-5 { background: $color-5-color }
.color-6 { background: $color-6-color }





/* ==========================================================================
   =FORM
   ========================================================================== */

.ws-form { margin-top: -1.5em }

input, textarea {
  /* Use for styling text based form elements, like name, email, password. 
  Button/submit specific styles below, those will override */
  display: block
  padding: .5em
  margin-bottom: .75em
  border: .25em solid #eee
  width: 100%
  
  box-sizing: border-box

  transition: all .3s ease

  resize: none
}

input:focus, textarea:focus {
  outline: none
  border-color: $prim-color
}

input[type='button'], input[type='submit'], button, .button {
  border: none
  background: transparent 
  line-height: 1
  cursor: pointer
  padding: 1em 1.5em
  color: white
  border: .25em solid

  transition: all .3s ease

  display: block
  margin-bottom: .75em
  margin-bottom: .75rem  
}


.btn-primary {
  background: $prim-color
  border-color: darken($prim-color, 10%)

  &:hover {
    background: darken($prim-color, 10%)
    border-color: $prim-color
  }
  
  &:focus, &:active {
    background: darken($prim-color, 10%)
  }
}

.btn-secondary { 
  background: $sec-color
  border-color: darken($sec-color, 10%)
  
  &:hover {
    background: darken($sec-color, 10%)
    border-color: $sec-color
  }

  &:focus, &:active {
    background: darken($sec-color, 10%)
  }
}


.btn-tertiary {
  font-size: .875em
  background: $light-grey
  border-color: darken($light-grey, 10%)

  &:hover {
    background: darken($light-grey, 10%)
    border-color: $light-grey
  }

  &:focus, &:active {
    background: darken($light-grey, 10%)
  }
}






/* ==========================================================================
   =ADJECTIVES
   ========================================================================== */

.ws-adjectives div {
  font-size: 1.5em
  padding-bottom: .25em
}






/* ==========================================================================
   =COLOPHON
   ========================================================================== */

.colophon { 
  clear: both 
  text-align: center 
  font-size: .875em 
  padding: 1.714em 0
  border-top: thin solid #eee
  margin-top: 1.714em
}
