@import 'partials/_normalize'
@import 'partials/_grid'
@import 'partials/_var'








/* ==========================================================================
   =MASTHEAD
   ========================================================================== */

.masthead { 
  background: #f6f6f6 
  overflow: hidden 
  margin-bottom: 1.5em 
}

.logo h1 { 
  margin: 0 
  float: left 
  padding: .5em 0
  font-family: $main-font-family
  font-size: 2em
  line-height: 1
}

.menu { float: right }
.menu ul { padding: 1.5em 0; margin: 0 }

.menu li {
  list-style: none
  display: inline-block
  margin: 0 0 .5em .5em
}

.menu a {
  padding: .5em
  border: .25em solid $prim-color
  display: block
}

.menu a:hover {
  background: $prim-color
  color: white
}





/* ==========================================================================
   =COLOR
   ========================================================================== */

[class^="color"] {
  height: 5em
}

.color-1 { background: $color-1-color }
.color-2 { background: $color-2-color }
.color-3 { background: $color-3-color }
.color-4 { background: $color-4-color }
.color-5 { background: $color-5-color }
.color-6 { background: $color-6-color }





/* ==========================================================================
   =FORM
   ========================================================================== */

.ws-form { margin-top: -1.5em }

input, textarea {
  /* Use for styling text based form elements, like name, email, password. 
  Button/submit specific styles below, those will override */
  display: block
  padding: .5em
  margin-bottom: .75em
  border: 1px solid #eee
  width: 100%
  box-sizing: border-box
  transition: all .3s ease
  resize: none
}

input:focus, textarea:focus {
  outline: none
  border-color: $prim-color
}

input[type='button'], input[type='submit'], button, .button {
  border: none
  background: transparent 
  line-height: 1
  cursor: pointer
  padding: 1em 1.5em
  color: white
  border: .25em solid
  transition: all .3s ease
  display: block
  margin-bottom: .75em
  margin-bottom: .75rem  
}

button-style(color, perc) {
  background: color
  border-color: darken(color, perc)

  &:hover {
    background: darken(color, perc)
    border-color: color
  }
  
  &:focus, &:active {
    background: darken(color, perc)
  }
}

.btn-primary { button-style($prim-color, 10%) }
.btn-primary { button-style($sec-color, 10%) }
.btn-primary { button-style($light-grey, 10%) }







/* ==========================================================================
   =ADJECTIVES
   ========================================================================== */

.ws-adjectives div {
  font-size: 1.5em
  padding-bottom: .25em
}






/* ==========================================================================
   =COLOPHON
   ========================================================================== */

.colophon { 
  clear: both 
  text-align: center 
  font-size: .875em 
  padding: 1.714em 0
  border-top: thin solid #eee
  margin-top: 1.714em
}
